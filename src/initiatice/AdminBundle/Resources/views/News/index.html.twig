{% extends "initiaticeAdminBundle::layout.html.twig" %}
{% block initiaticeAdmin_body %}
  </br>
  <div class="row">
    <div class="col l2 offset-l10">
      <a class="z-depth-3 waves-effect waves-light btn blue darken-2" href="{{ path('initiatice_admin_news_add') }}">Ajouter</a>
    </div>
  </div>
    <table class="striped z-depth-1">
        <thead class ="blue darken-2 white-text">
        <tr>
            <th data-field="title">Titre</th>
            <th data-field="type">Type</th>
            <th data-field="abstract">Résumé</th>
            <th data-field="date_add">Date d'ajout</th>
            <th data-field="actions" class="table-actions-2">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for item in news %}
        <tr>
            <td>{{ item.title|slice(0, 50) }}</td>
            <td>{{ item.type }}</td>
            <td>{{ item.abstract|slice(0, 50) }}</td>
            <td>{{ item.dateAdd|date("d/m/Y") }}</td>
            <td>
                <a class="btn-floating waves-effect waves-light z-depth-2 blue darken-1" href="{{ path('initiatice_admin_news_edit', {'id': item.id}) }}"><i class="material-icons left">mode_edit</i></a>
                <a class="btn-floating waves-effect waves-light z-depth-2 blue darken-1" href="{{ path('initiatice_admin_news_remove', {'id': item.id}) }}"><i class="material-icons left">delete</i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
